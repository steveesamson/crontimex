{
	"name": "crontimex",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"postbuild": "touch ./docs/.nojekyll",
		"test": "npm run build && node ./dist/crontimex.test.js",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/steveesamson/crontimex.git"
	},
	"author": "Steve S. Samson <stevee.samson@gmail.com> (http://github.com/steveesamson)",
	"homepage": "https://steveesamson.github.io/crontimex",
	"license": "MIT",
	"private": false,
	"keywords": [
		"cron-time",
		"cron-timex",
		"crontimex",
		"cron",
		"cron-parser",
		"cron-expression",
		"cron-time-expression"
	],
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"cron-validator": "^1.3.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"japa": "^4.0.0",
		"mdsvex": "^0.11.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"shiki": "^0.14.7",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
